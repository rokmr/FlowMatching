{
    "name": "Flow Matching Development",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.10"
        }
    },
    "postCreateCommand": "conda env create -f environment.yml && conda init bash && source ~/.bashrc && conda activate flow_matching",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter"
            ],{
                "name": "Flow Matching Development",
                "image": "mcr.microsoft.com/devcontainers/miniconda:3",
                "features": {
                    "ghcr.io/devcontainers/features/python:1": {
                        "version": "3.10"
                    }
                },
                "postCreateCommand": "conda env create -f environment.yml && conda init bash && source ~/.bashrc && conda activate flow_matching",
                "customizations": {
                    "vscode": {
                        "extensions": [
                            "ms-python.python",
                            "ms-python.vscode-pylance",
                            "ms-toolsai.jupyter"
                        ],
                        "settings": {
                            "python.defaultInterpreterPath": "/opt/conda/envs/flow_matching/bin/python"
                        }
                    }
                },
                "remoteUser": "vscode"
            } 
            "settings": {
                "python.defaultInterpreterPath": "/opt/conda/envs/flow_matching/bin/python"
            }
        }
    },
    "remoteUser": "vscode"
